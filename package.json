{
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "nodemon --watch src --ext ts --exec ts-node src/app.ts --legacy-watch",
    "docker:prod": "docker compose -f docker-compose.yml up --build",
    "docker:dev": "docker compose up --build",
    "docker:down": "docker compose down",
    "docker:reset": "echo ⚠️ This will DELETE ALL VOLUMES && docker-compose down -v --remove-orphans",
    "docker:restart": "docker-compose down && docker-compose up -d",
    "docker:logs": "docker-compose logs -f",
    "docker:health": "curl -f http://localhost:3000/health",
    "db:health": "curl -f http://localhost:3000/health/db",
    "tree": "powershell -ExecutionPolicy Bypass -File ./scripts/tree.ps1",
    "migrate:docker": "prisma migrate deploy"
  },
  "dependencies": {
    "@prisma/client": "^6.19.1",
    "bcrypt": "^6.0.0",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "prisma": "^6.19.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.3",
    "nodemon": "^3.1.11",
    "tree-node-cli": "^1.6.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
